<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/trans_list">
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/trans_image"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_toEndOf="@+id/trans_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/trans_hard_id"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardware :"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/hardwareId_value"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_2"
        android:layout_below="@+id/linearlayout_1"
        android:layout_toEndOf="@+id/trans_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/trans_newOwner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="New Owner :"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/newOwner_value"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_3"
        android:layout_below="@+id/linearlayout_2"
        android:layout_toEndOf="@+id/trans_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/trans_transaction_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="Transaction Id :"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/trans_id_value"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_4"
        android:layout_below="@+id/linearlayout_3"
        android:layout_toEndOf="@+id/trans_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/trans_timeStamp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="Time Stamp :"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/timeStamp_value"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/line"
        style="@style/Divider"
        android:layout_below="@id/linearlayout_4"/>


</RelativeLayout>